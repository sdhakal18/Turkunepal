    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "prettier --write \"**/*.+(tsx|ts|json|scss|md)\""
    }
  },
  "lint-staged": {
    "*.+(json|css|md)": ["prettier --write", "git add"]
