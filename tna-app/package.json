    "@testing-library/user-event": "^7.1.2",
    "@types/jest": "^24.0.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-scripts": "3.4.3",
    "typescript": "~3.7.2"
  },
  "scripts": {
